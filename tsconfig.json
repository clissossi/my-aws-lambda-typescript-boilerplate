{
    "compilerOptions": {
      "outDir": "./dist/",
      "module": "commonjs",
      "target": "ES2019",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node"
      ],
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "noImplicitAny": false
    },
    "exclude":  ["node_modules", "tests/**"]
}